@model List<StudentViewModel>
@{
    ViewData["Title"] = Localizer["Students"];
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item active align-bottom">@Localizer["Students"]</li>
        <li class="ml-auto">
            <a asp-action="Add" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i>
            </a>
        </li>
    </ol>
</nav>

<table class="table table-hover">
    <thead>
        <tr>
            <th>@Localizer["Name"]</th>
            <th>@Localizer["Class"]</th>
            <th>@Localizer["LessonsTaken"]</th>
            <th>@Localizer["LessonsLeft"]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td><a asp-action="View" asp-route-id="@student.Id">@student.Name</a></td>
                <td>@student.Class.Name</td>
                <td>@student.Attendances.Count</td>
                <td>
                    @if (student.LessonsLeft < 0)
                    {
                        <span class="text-danger">@student.LessonsLeft</span>
                    }
                    else
                    {
                        <span>@student.LessonsLeft</span>
                    }
                </td>
                <td>
                    <a class="btn btn-primary btn-sm mr-2" asp-action="Edit" asp-route-id="@student.Id" title="Edit">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
