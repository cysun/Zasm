@model List<Student>
@{
    ViewData["Title"] = "Students";
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item active align-bottom">Students</li>
        <li class="ml-auto">
            <a asp-action="Add" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i>
            </a>
        </li>
    </ol>
</nav>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td><a asp-action="View" asp-route-id="@student.Id">@student.Name</a></td>
                <td>@(DateTime.Now.Year - student.BirthYear)</td>
                <td>
                    <a class="btn btn-primary btn-sm mr-2" asp-action="Edit" asp-route-id="@student.Id" title="Edit">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>