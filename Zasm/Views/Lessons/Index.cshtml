@model List<Lesson>
@{
    ViewData["Title"] = Localizer["Lessons"];
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item active align-bottom">@Localizer["Lessons"]</li>
        <li class="ml-auto">
            <a asp-action="Add" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i>
            </a>
        </li>
    </ol>
</nav>

<table class="table table-hover">
    <thead>
        <tr>
            <th>@Localizer["Time"]</th>
            <th>@Localizer["Class"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lesson in Model)
        {
            <tr>
                <td>
                    <a asp-action="View" asp-route-id="@lesson.Id">@lesson.DateTime.ToString("g")</a>
                </td>
                <td>@lesson.Class.Name</td>
            </tr>
        }
    </tbody>
</table>
