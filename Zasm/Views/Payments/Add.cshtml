@model PaymentInputModel
@{
    ViewData["Title"] = Localizer["NewPayments"];
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">@Localizer["Payments"]</a></li>
        <li class="breadcrumb-item active">@Localizer["AddPayment"]</li>
    </ol>
</nav>

<form method="post">
    <div class="form-row">
        <div class="form-group col-md-5">
            <label asp-for="StudentId"></label>
            <select asp-for="StudentId" asp-items="ViewBag.Students" class="form-control"></select>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="DateTime"></label>
            <input asp-for="DateTime" class="form-control">
            <span asp-validation-for="DateTime" class="text-danger"></span>
        </div>
        <div class="form-group col-6 col-md-2">
            <label asp-for="Amount"></label>
            <input asp-for="Amount" class="form-control">
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="form-group col-6 col-md-2">
            <label asp-for="Lessons"></label>
            <input asp-for="Lessons" class="form-control">
            <span asp-validation-for="Lessons" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col-4">
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        </div>
        <div class="col-8 text-right">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
    </div>
</form>
